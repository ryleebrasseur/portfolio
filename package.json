{
  "name": "portfolio",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "description": "Production-grade modular frontend monorepo for elite portfolio sites",
  "author": "RyleeB",
  "license": "MIT",
  "engines": {
    "node": ">=20.17.0",
    "pnpm": ">=9.12.0"
  },
  "packageManager": "pnpm@9.12.0",
  "volta": {
    "node": "20.17.0",
    "pnpm": "9.12.0"
  },
  "scripts": {
    "dev": "turbo run dev",
    "dev:app": "node scripts/dev-app.js",
    "dev:stop": "node scripts/stop-all-dev.js",
    "build": "turbo run build",
    "build:app": "node scripts/build-app.js",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "test:unit": "turbo run test:unit",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "lint:ci": "turbo run lint -- --max-warnings 0",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "clean": "turbo run clean && rimraf node_modules .turbo",
    "clean:all": "pnpm clean && pnpm -r exec rimraf node_modules",
    "typecheck": "turbo run typecheck",
    "prepare": "node scripts/prepare.cjs",
    "preinstall": "npx only-allow pnpm",
    "release:notes": "tsx scripts/generate-release-notes.ts",
    "release:publish": "tsx scripts/publish-release.ts",
    "release": "pnpm release:notes && pnpm release:publish",
    "deps:check": "syncpack list-mismatches",
    "deps:fix": "syncpack fix-mismatches",
    "deps:update": "syncpack update",
    "check:all": "pnpm check:deps && pnpm check:types && pnpm check:lint && pnpm check:format",
    "check:deps": "node scripts/check-dependencies.js || echo 'TODO: Implement check-dependencies.js'",
    "check:types": "pnpm typecheck",
    "check:lint": "pnpm lint",
    "check:format": "pnpm format:check",
    "setup": "./dev_setup.sh",
    "setup:check": "node scripts/check-setup.js || echo 'TODO: Create check-setup.js'",
    "ci:setup": "pnpm install --frozen-lockfile",
    "ci:build": "turbo run build --cache-dir=.turbo",
    "ci:test": "turbo run test --cache-dir=.turbo"
  },
  "dependencies": {
    "@react-three/drei": "9.99.0",
    "@react-three/fiber": "8.15.19",
    "framer-motion": "^11.0.24",
    "gsap": "^3.12.5",
    "lenis": "^1.3.4",
    "lodash": "4.17.21",
    "papaparse": "5.4.1",
    "picocolors": "^1.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "three": "0.161.0"
  },
  "devDependencies": {
    "@eslint/js": "9.0.0",
    "@playwright/test": "1.52.0",
    "@types/lodash": "4.17.0",
    "@types/node": "20.11.30",
    "@types/react": "18.2.79",
    "@types/react-dom": "18.2.25",
    "@types/three": "0.161.0",
    "@vitejs/plugin-react": "4.2.1",
    "autoprefixer": "10.4.19",
    "eslint": "9.0.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-react": "7.37.2",
    "eslint-plugin-react-hooks": "5.0.0",
    "husky": "9.0.11",
    "lint-staged": "15.2.2",
    "postcss": "8.4.38",
    "postcss-custom-media": "10.0.3",
    "postcss-modules": "6.0.0",
    "postcss-nested": "6.0.1",
    "prettier": "3.2.5",
    "rimraf": "^6.0.1",
    "sass": "1.72.0",
    "syncpack": "^13.0.4",
    "tsx": "^4.20.0",
    "turbo": "1.13.2",
    "typescript": "5.8.3",
    "typescript-eslint": "8.0.0",
    "vite": "5.2.8",
    "vitest": "1.4.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix --max-warnings 0",
      "prettier --write"
    ],
    "*.{json,css,scss,md}": "prettier --write",
    "*.{yml,yaml}": [
      "node scripts/lint-yaml.js",
      "prettier --write"
    ]
  }
}
