{
  "compilerOptions": {
    "composite": true,
    "strict": true,
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@ryleebrasseur/motion-system": ["./packages/motion-system/src"],
      "@ryleebrasseur/motion-system/*": ["./packages/motion-system/src/*"],
      "@ryleebrasseur/shared-types": ["./packages/shared-types"],
      "@ryleebrasseur/shared-types/*": ["./packages/shared-types/*"],
      "@ryleebrasseur/shared-utils": ["./packages/shared-utils/src"],
      "@ryleebrasseur/shared-utils/*": ["./packages/shared-utils/src/*"],
      "@ryleebrasseur/dev-tools": ["./packages/dev-tools/src"],
      "@ryleebrasseur/dev-tools/*": ["./packages/dev-tools/src/*"],
      "@ryleebrasseur/story-scroller": ["./packages/story-scroller/src"],
      "@ryleebrasseur/story-scroller/*": ["./packages/story-scroller/src/*"]
    }
  },
  "references": [
    {
      "path": "./apps/rylee-brasseur"
    },
    {
      "path": "./packages/dev-tools"
    },
    {
      "path": "./packages/motion-system"
    },
    {
      "path": "./packages/shared-types"
    },
    {
      "path": "./packages/shared-utils"
    },
    {
      "path": "./packages/story-scroller"
    }
  ]
}
